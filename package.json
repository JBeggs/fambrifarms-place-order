{
  "name": "place-order",
  "version": "1.0.0",
  "description": "Process WhatsApp orders in a simple Electron UI (JSON-only payload)",
  "main": "main.js",
  "author": "Fambri Farms",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "electron": "^30.0.0",
    "selenium-webdriver": "^4.15.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.fambri.placeorder",
    "productName": "Fambri Order Processor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!whatsapp-session/**/*",
      "!images/**/*",
      "!test-*.js",
      "!ai_sucks.md",
      "!todayifuckedup.md"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
